{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block customStyle %}
    <link href="{{ asset('css/RegisterAndSign.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="card bg-light">
            <article class="card-body mx-auto" style="max-width: 400px;">
                <h2 class="text-center">Connexion :</h2>
                <hr class="">
                <div>
                    <div class="block-small">

                        {% if error %}
                            <div class="alert alert-danger text-center display-4"><h5>{{ error.messageKey|trans(error.messageData, 'security') }}</strong></h5></div>
                            <hr>
                        {% endif %}
                        {% if success %}
                            <div class="alert alert-success text-center">{{ success }}</div>
                            <hr>
                        {% endif %}

                        <form method="post">
                            <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input type="email" id="register_email" value="{{ last_username }}" name="_username" required="required" placeholder="Votre email" class="form-control" />

                            </div> <!-- form-group// -->

                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input type="password" id="register_password_first" name="_password" required="required" placeholder="Mot de passe" class="form-control" />

                            </div>

                            <div class="form-group input-group">
                                <label>
                                    <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
                                </label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <!-- form-group// -->
                            <div class="form-group">
                                <div class="mb-3"><button class="btn btn-primary btn-block btn" type="submit"><i class="fa fa-lock-open"></i> Connexion</button></div><input type="hidden" id="register__token" name="register[_token]" value="1d086410fddbc06839.UYxsrIkUFdtwuxO7e_Yv5k8wsVzDMPJyMpF6RbS7uGA.IcIexuxYb5lI8H3KTaFIjzx09jG7eqQKYtUrMPbQ9yQQ9j_EsGdAmR_scA" /></form>
                    </div> <!-- form-group// -->
                </div>
            </article>
        </div>
    </div>
{% endblock %}
